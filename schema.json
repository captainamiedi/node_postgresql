{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/root.json",
    "type": "object",
    "title": "The Root Schema",
    "required": [
      "id",
      "email",
      "password"
    ],
    "properties": {
      "id": {
        "$id": "#/properties/id",
        "type": "integer",
        "title": "The Id Schema",
        "default": 0,
        "examples": [
          1
        ]
      },
      "email": {
        "$id": "#/properties/email",
        "type": "string",
        "title": "The Email Schema",
        "default": "",
        "examples": [
          "test@gmail.com"
        ],
        "pattern": "^(.*)$"
      },
      "password": {
        "$id": "#/properties/password",
        "type": "string",
        "title": "The Password Schema",
        "default": "",
        "examples": [
          "bright1"
        ],
        "pattern": "^(.*)$"
      }
    }
  }